@page "/docs/components/badges"
@layout DocsLayout

<Breadcrumb>
	<BreadcrumbItem>
		Docs
	</BreadcrumbItem>
	<ChevronRight class="h-4 w-4" />
	<BreadcrumbItem IsActive="true">
		Badges
	</BreadcrumbItem>
</Breadcrumb>
<div class="space-y-4">
	<TypographyH1>
		Badges
	</TypographyH1>
	<TypographyLead>
		Displays a badge component
	</TypographyLead>
</div>
<div class="pb-12 pt-8">
	<TypographyH2>
		Default
	</TypographyH2>
	<ComponentPreview AlpinePropertyName="DefaultViewer">
		<ComponentPreviewRendered AlpinePropertyName="DefaultViewer">
			<Badge>Badge</Badge>
		</ComponentPreviewRendered>
		<ComponentPreviewCode AlpinePropertyName="DefaultViewer">
			<CodeExample>
@($@"<Badge>Badge</Badge>")
			</CodeExample>
		</ComponentPreviewCode>
	</ComponentPreview>
	<TypographyH2>
		Secondary
	</TypographyH2>
	<ComponentPreview AlpinePropertyName="SecondaryViewer">
		<ComponentPreviewRendered AlpinePropertyName="SecondaryViewer">
			<Badge Variant="BadgeVariant.Secondary">Secondary</Badge>
		</ComponentPreviewRendered>
		<ComponentPreviewCode AlpinePropertyName="SecondaryViewer">
			<CodeExample>
@($@"<Badge Variant=""BadgeVariant.Secondary"">Secondary</Badge>")
			</CodeExample>
		</ComponentPreviewCode>
	</ComponentPreview>
	<TypographyH2>
		Outline
	</TypographyH2>
	<ComponentPreview AlpinePropertyName="OutlineViewer">
		<ComponentPreviewRendered AlpinePropertyName="OutlineViewer">
			<Badge Variant="BadgeVariant.Outline">Outline</Badge>
		</ComponentPreviewRendered>
		<ComponentPreviewCode AlpinePropertyName="OutlineViewer">
			<CodeExample>
@($@"<Badge Variant=""BadgeVariant.Outline"">Outline</Badge>")
			</CodeExample>
		</ComponentPreviewCode>
	</ComponentPreview>
	<TypographyH2>
		Destructive
	</TypographyH2>
	<ComponentPreview AlpinePropertyName="DestructiveViewer">
		<ComponentPreviewRendered AlpinePropertyName="DestructiveViewer">
			<Badge Variant="BadgeVariant.Destructive">Destructive</Badge>
		</ComponentPreviewRendered>
		<ComponentPreviewCode AlpinePropertyName="DestructiveViewer">
			<CodeExample>
@($@"<Badge Variant=""BadgeVariant.Destructive"">Destructive</Badge>")
			</CodeExample>
		</ComponentPreviewCode>
	</ComponentPreview>
</div>